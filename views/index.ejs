    <html xmlns="http://www.w3.org/1999/xhtml" xml:lang="en" lang="en" >
        <head>
            <meta http-equiv="X-UA-Compatible" content="text/html" charset="utf-8" />
            <meta name="viewport" content="width=device-width, initial-scale=1.0">
            <meta name="description" content="" >
            <link rel="StyleSheet" href="styles.css" />
            <script src="https://secure.exportkit.com/cdn/js/ek_googlefonts.js?v=6"></script>
    
    <title>Currency Converter</title>
        </head>
        <body>
            <div id="heading"  >
                <h1 id="currency_converter" >
                    Currency Converter
                </h1>
                <p id="check_live_foreign_currency_exchange_rates" >
                    Check live foreign currency exchange rates
                </p>
                </div>
<div id="content-container">
    <form action="/" method="post">
        <div id="form_background"  >
            <div id="rectangle_2"  ></div>
            <img src="skins/image_1.png" id="image_1" />

        </div>
    
    <div id="amount_column"  >
        <input id="rectangle_3" type="number" name="Amount" placeholder="Amount" autofocus>

    </div>
    <div id="from" >
        From
    </div>
    <div id="from_country_column"  >
        <select id="rectangle_4" name = "fromCountry" >  
    <option value=""  disabled selected >Country</option>
  </select>
    </div>
    <div id="to" >
        To
    </div>
    <div id="to_country_column"  >
        <select id="rectangle_5" name = "toCountry">  
        
            <option value=""  disabled selected >Country</option>
          </select>
    </div>
    <div id="exchange_rate" >
        Amount
    </div>
    <div id="rate" >
      <%= amount %>
    </div>
        <button type="submit" id="submit_button">Convert</button>

</form>
     </div>
            <script>
                // Fetch the currencies from the API
                fetch('/api/currencies')
                  .then(response => response.json())
                  .then(data => {
                    // Get the currency dropdown element
                    const dropdown = document.getElementById('rectangle_4');
              
                    // Remove the loading option
                    //dropdown.innerHTML = '';
              
                    // Loop through the currencies and add them to the dropdown
                    Object.keys(data).forEach(code => {
                      const option = document.createElement('option');
                      option.value = code;
                      option.innerHTML = `${code} - ${data[code]}`;
                      dropdown.appendChild(option);
                    });
                  })
                  .catch(error => {
                    console.error('Error fetching currencies:', error);
                  });
                  fetch('/api/currencies')
                  .then(response => response.json())
                  .then(data => {
                    // Get the currency dropdown element
                    const dropdown2 = document.getElementById('rectangle_5');
              

                    Object.keys(data).forEach(code => {
                      const option = document.createElement('option');
                      option.value = code;
                      option.innerHTML = `${code} - ${data[code]}`;
                      dropdown2.appendChild(option);
                    });
                  })
                  .catch(error => {
                    console.error('Error fetching currencies:', error);
                  });
              </script>
              <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.6.1/jquery.min.js"></script>                   
        </body>
    </html>